angular.module 'PersonalManagementCtr', [
  'ngResource'
  'ngRoute'
]

.config [
  '$routeProvider'
  '$locationProvider'
  ($routeProvider, $locationProvider)->

    $locationProvider.html5Mode
      enabled: true
      requireBase: false

    $routeProvider.when '/',
      templateUrl: "<%= asset_path('home/index.html') %>"
      controller: 'Home::IndexCtrl'
    .when '/log_in',
      templateUrl: "<%= asset_path('sessions/new.html') %>"
      controller: 'Sessions::IndexCtrl'
]

.controller 'AppCtrl', [
  '$scope'
  (s)->
    console.log 'AppCtrl'
]
